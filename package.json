{
  "name": "chores-tracker",
  "version": "1.0.0",
  "description": "A web application for children to track chores",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "lint": "eslint app/ --ext .js",
    "format": "prettier --write \"app/**/*.js\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install"
  },
  "keywords": [
    "chores",
    "children",
    "routines",
    "web-components"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.53.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "app/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
} 